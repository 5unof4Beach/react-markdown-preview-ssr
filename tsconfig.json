{
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": false,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./lib",
    "composite": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
